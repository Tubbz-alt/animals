extends layout

block content
  section(class="intro", data-window="canvas")
    div(class="text-container")
      h1(class="page-title")= appName
      button(type="submit", class="start-app") [ press here or hit "<strong>space</strong>" ]

  section(class="app", data-window="canvas")
    h1(class="page-title")= appName
    
    section(class="animal")
      div(class="thumb-box")
        p(class="instructions") Press shuffle button to <span>start</span>

      h2(class="name") Welcome

      audio(class="player-word")
        source(src="/audio/animals.mp3", type="audio/mpeg")
        source(src="/audio/animals.ogg", type="audio/ogg")

      audio(class="player-sound")

    section(class="controls")
      div(class="control-button")
        button(class="play disabled")
          span(class="icon-play")
        div(class="button-text") Play

      div(class="control-button")
        button(class="shuffle")
          span(class="icon-refresh")
        div(class="button-text") Shuffle

    footer(class="footer")
      p(class="author") By <a href="http://github.com/gustavocardoso">Gustavo Cardoso</a>. Developed to my daughter!
      <p class="credits">Icons made by <a href="http://www.flaticon.com/authors/madebyoliver" title="Madebyoliver">Madebyoliver</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a> and <a target='_blank' href='https://www.vexels.com/vectors/png-svg/141725/sheep-wool-animal '> Sheep wool animal </a> | Designed by Vexels.com </p>
    </footer>
